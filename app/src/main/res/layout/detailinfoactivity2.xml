                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnermount2"
                ></Spinner>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.65"
