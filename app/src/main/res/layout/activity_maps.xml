                android:textSize="18dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                ></LinearLayout>

        </LinearLayout>

        <LinearLayout
